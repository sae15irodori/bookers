<h1>Editing Book</h1>

<!--バリデーション-->
<%if @book.errors.any? %>
  <%= @book.errors.count %>error ※please fill in the blanks
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--入力フォーム-->
<%= form_with model: @book,url: book_path(@book.id), method: :put do |f| %><!--editアクションで取得した､編集するidﾃﾞｰﾀをfに格納-->

  <%= f.text_field :title %>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
  <% end %><!--変数f終了(特定のidデータ)-->
  
  
  <%= link_to "Show", book_path(@book.id) %><!--@bookはeditｱｸｼｮﾝで取得した特定idのﾃﾞｰﾀ-->
  <%= link_to "Back", books_path(@book.id) %><!--一覧ページへ飛ぶ-->